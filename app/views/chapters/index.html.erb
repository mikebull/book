  <h1>Heading</h1>
  <p>By Author</p>
</div>

<div class="book">
  <% if @chapters.any? %>
    <ol>
      <% @chapters.each do |chapter| %>
        <li><%= link_to chapter.title, chapter_path(slug: chapter.slug) %></li>
      <% end %>
    </ol>
  <% end %>
  <p><%= link_to 'New', new_chapter_path %></p>
</div>

