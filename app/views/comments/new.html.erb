<%= form_for @comment, url: chapter_comments_path(paragraph_id: params[:paragraph_id]), method: 'chapter' do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'editor-title', placeholder: 'Name', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :body %> 
  </div>

  <%= f.hidden_field :paragraph_reference, value: params[:paragraph_id] %>

  <%= f.submit %>

<% end %>